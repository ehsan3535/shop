@section Styles{
    <link href="~/assets/plugins/noty/css/flat.css" rel="stylesheet">
}

<div class="row">

    <div class="col-lg-12">
        <div class="portlet box border shadow">
            <div class="portlet-heading">
                <div class="portlet-title">
                    <h3 class="title">
                        <i class="icon-basket-loaded fa-flip-horizontal"></i>
                        فهرست سفارشات
                    </h3>
                </div><!-- /.portlet-title -->
                <div class="buttons-box">
                    <a class="btn btn-sm btn-default btn-round btn-code" rel="tooltip" title="کدها" href="#">
                        <i class="icon-arrow-left"></i><span>/</span><i class="icon-arrow-right"></i>
                    </a>
                    <div class="code-modal hide">
                    </div>
                    <a class="btn btn-sm btn-default btn-round btn-fullscreen" rel="tooltip" title="تمام صفحه" href="#">
                        <i class="icon-size-fullscreen"></i>
                    </a>
                    <a class="btn btn-sm btn-default btn-round btn-collapse" rel="tooltip" title="کوچک کردن" href="#">
                        <i class="icon-arrow-up"></i>
                    </a>
                </div><!-- /.buttons-box -->
            </div><!-- /.portlet-heading -->
            <div class="portlet-body">
                <div class="row">
                    <div class="col-md-4 col-12 m-b-20">
                        <a class="btn btn-success btn-round" href="AddProduct">
                            <i class="icon-plus"></i>
                            افزودن
                        </a>
                        <a class="btn btn-info btn-round" href="Product.html">
                            <i class="icon-layers"></i>
                            بایگانی
                        </a>
                    </div><!-- /.col-md-4 -->
                    <div class="col-md-4 col-12 m-b-20">
                        <form role="form">
                            <div class="input-group round">
                                <input type="text" class="form-control" placeholder="جستجو...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <i class="icon-magnifier"></i>
                                        <div class="paper-ripple">
                                    </button>
                                </span>
                            </div><!-- ./input-group -->
                        </form>
                    </div><!-- /.col-md-4 -->
                    <div class="col-md-4 col-12 m-b-20">
                        <select class="form-select round">
                            <option value="0">مرتب سازی بر اساس تاریخ</option>
                            <option value="1">مرتب سازی بر اساس محصول</option>
                            <option value="2">مرتب سازی بر اساس مبلغ</option>
                            <option value="3">مرتب سازی بر اساس وضعیت</option>
                        </select>
                    </div><!-- /.col-md-4 -->
                </div><!-- /.row -->
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <th><i class="icon-energy"></i></th>
                                <th>نام خریدار</th>
                                <th>دسته بندی</th>
                                <th>مبلغ</th>
                                <th>وضعیت</th>
                                <th>مدیریت</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Number</td>
                                    <td>@item.Name </td>
                                    <td>@item.Category</td>
                                    <td>@item.Price</td>
                                    <td>@item.mojod</td>
                                    <td>
                                        <a href="/Shop/ProductDetail?ProductId=@item.Id" class="btn btn-success btn-round">
                                            <i class="icon-eyeglass"></i>
                                            مشاهده
                                        </a>
                                        <a href="/Shop/EditProduct?ProductId=@item.Id" class="btn btn-info btn-round">
                                            <i class="icon-note"></i>
                                            ویرایش
                                        </a> <a href="/Shop/delete?Id=@item.Id" class="btn btn-danger btn-round btn-noty-with-buttons">
                                            <i class="icon-trash"></i>
                                            حذف
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div><!-- /.table-responsive -->
                <div class="text-center">
                    <ul class="pagination round">
                        <li>
                            <a href="#">
                                <i class="icon-control-end"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="icon-arrow-right"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#">1</a>
                        </li>
                        <li>
                            <span class="active" href="#">2</span>
                        </li>
                        <li>
                            <a href="#">3</a>
                        </li>
                        <li>
                            <a href="#">4</a>
                        </li>
                        <li>
                            <a href="#">5</a>
                        </li>
                        <li>
                            <a href="#">6</a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="icon-arrow-left"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="icon-control-start"></i>
                            </a>
                        </li>
                    </ul>
                </div><!-- /.text-center -->
            </div><!-- /.portlet-body -->
        </div><!-- /.portlet -->
    </div><!-- /.col-lg-12 -->


</div><!-- /.row -->
@section Scripts{
                     <script src="~/assets/plugins/noty/js/noty/packaged/jquery.noty.packaged.min.js" ></script>
                     <script src="~/assets/js/pages/noty.js"></script>
                }